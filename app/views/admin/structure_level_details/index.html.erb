<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Structure level details</h1>
    <%= link_to "New structure level details", new_admin_structure_level_detail_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div>
    <%= render "import" %>
  </div>

  <div id="structure_level_details" class="min-w-full pt-4">
    <table class="border-collapse w-full border border-slate-500 bg-slate-800 text-sm shadow-sm">
      <thead>
        <tr>
          <% %w[structure level description action].each do |column| %>
            <th class="w-1/2 border border-slate-600 font-semibold p-4 text-slate-200 text-left">
              <%= t(".#{column}") %>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
      <% @structure_level_details.each do |structure_level_detail| %>
        <tr>
            <td class="border border-slate-700 p-4 text-slate-400">
              <%= structure_level_detail.structure.name %>
            </td>
            <td class="border border-slate-700 p-4 text-slate-400">
              <%= structure_level_detail.description %>
            </td>
            <td class="border border-slate-700 p-4 text-slate-400">
              <%= structure_level_detail.level %>
            </td>
            <td class="border border-slate-700 p-4 text-slate-400 flex">
              <%= link_to "Show", admin_structure_level_detail_path(structure_level_detail), class: "rounded-lg py-1 px-2 inline-block font-medium" %>
              <%= link_to "Edit", edit_admin_structure_level_detail_path(structure_level_detail), class: "rounded-lg py-1 ml-2 px-2 inline-block font-medium" %>
            </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
