<div>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Structures</h1>
    <%= link_to "New structure", new_admin_structure_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div>
    <%= render "import" %>
  </div>

  <div id="structures" class="min-w-full pt-4">
    <table class="border-collapse w-full text-sm shadow-sm">
      <thead>
        <tr>
          <% %w[name description season action].each do |column| %>
            <th>
              <%= t(".#{column}") %>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
      <% @structures.each do |structure| %>
        <tr>
            <td>
              <%= structure.name %>
            </td>
            <td>
              <%= structure.description %>
            </td>
            <td>
              <%= structure.season&.name %>
            </td>
            <td>
              <%= link_to "Show", admin_structure_path(structure), class: "rounded-lg py-1 px-2 inline-block font-medium" %>
              <%= link_to "Edit", edit_admin_structure_path(structure), class: "rounded-lg py-1 ml-2 px-2 inline-block font-medium" %>
            </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
