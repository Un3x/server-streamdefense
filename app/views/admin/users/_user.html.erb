<div id="<%= dom_id user %>">
  <h2 class="font-bold text-2xl">
    <%= t('.title') %>
  </h2>
  <p class="my-5">
    <%= t('.email', email: user.email).html_safe %>
  </p>

  <p class="my-5">
    <%= t('.twitch', twitch_id: user.twitch_id).html_safe %>
  </p>

  <p class="my-5">
    <%= t('.nickname', nickname: user.nickname).html_safe %>
  </p>

  <p class="my-5">
    <%= t('.role', role: user.role).html_safe %>
  </p>
</div>
