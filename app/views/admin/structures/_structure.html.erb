<div id="<%= dom_id structure %>">
  <h2 class="font-bold text-2xl">
    <%= t('.title') %>
  </h2>
  <p class="my-5">
    <%= t('.name', name: structure.name).html_safe %>
  </p>
  <p class="my-5">
    <%= t('.description', description: structure.description).html_safe %>
  </p>
  <p class="my-5">
    <%= t('.season', season: structure.season&.name).html_safe %>
  </p>
  <% if structure.icon.attached? %>
    <p class="my-5">
      <img class="h-12" src="<%= url_for(structure.icon) %>"/>
    </p>
  <% end %>
</div>
