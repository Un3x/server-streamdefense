<%= form_with(model: [:admin, structure]) do |form| %>
  <% if structure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(structure.errors.count, "error") %> prohibited this structure from being saved:</h2>

      <ul>
        <% structure.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :key %>
    <%= form.text_field :key %>
  </div>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :season %>
    <%= form.select :season_id, Season.all.pluck(:name, :id), { include_blank: "Select a season" } %>
  </div>

  <div>
    <%= form.label :icon %>
    <%= form.file_field :icon %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
