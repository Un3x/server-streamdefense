<div id="structure_requirements" class="min-w-full pt-4">
  <div class="flex justify-between items-center">
    <h2 class="font-bold text-4xl">Structure requirements</h1>
    <%= link_to "New structure requirement", new_admin_structure_requirement_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <table class="border-collapse w-full shadow-sm">
    <thead>
      <tr>
        <% %w[required_structure required_level restriction action].each do |column| %>
          <th>
            <%= t(".#{column}") %>
          </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
    <% structure_requirements.each do |structure_requirement| %>
      <tr>
        <td>
          <%= structure_requirement.required_structure.name %>
        </td>
        <td>
          <%= structure_requirement.required_level%>
        </td>
        <td>
          <%= structure_requirement.restriction %>
        </td>
        <td>
          <%= link_to "Show", admin_structure_requirement_path(structure_requirement), class: "rounded-lg py-1 px-2 inline-block font-medium" %>
          <%= link_to "Edit", edit_admin_structure_requirement_path(structure_requirement), class: "rounded-lg py-1 ml-2 px-2 inline-block font-medium" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
