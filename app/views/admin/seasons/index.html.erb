<div>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Seasons</h1>
    <%= link_to "New season", new_admin_season_path, class: "rounded-lg py-3 px-5 bg-blue-900 text-white block font-medium" %>
  </div>

  <div id="seasons" class="min-w-full pt-4">
    <table class="border-collapse w-full text-sm shadow-sm">
      <thead>
        <tr>
          <% %w[name speed active action].each do |column| %>
            <th>
              <%= t(".#{column}") %>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
      <% @seasons.each do |season| %>
        <tr>
          <td>
            <%= season.name %>
          </td>
          <td>
            <%= season.speed %>
          </td>
          <td>
            <%= season.active %>
          </td>
          <td>
            <%= link_to "Show", admin_season_path(season), class: "rounded-lg py-1 px-2 inline-block font-medium" %>
            <%= link_to "Edit", edit_admin_season_path(season), class: "rounded-lg py-1 ml-2 px-2 inline-block font-medium" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
