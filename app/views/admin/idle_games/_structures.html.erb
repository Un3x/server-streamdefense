<div id="structures">
  <h2 class="font-bold text-2xl">
    <%= t('.title') %>
  </h2>
  <table class="border-collapse w-full text-sm shadow-sm">
    <thead>
      <tr>
        <% %w[name level leveling?].each do |column| %>
          <th>
            <%= t(".#{column}") %>
          </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
    <% idle_game_structures.each do |idle_game_structure| %>
      <tr>
          <td>
            <%= idle_game_structure.structure.name %>
          </td>
          <td>
            <%= idle_game_structure.level %>
          </td>
          <td>
            <% if idle_game_structure.leveling?.present? %>
              OUI
            <% else %>
              NON
            <% end %>
          </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
