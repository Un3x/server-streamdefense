<div>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Channels</h1>
  </div>

  <div id="channels" class="min-w-full pt-4">
    <table class="border-collapse w-full text-sm shadow-sm">
      <thead>
        <tr>
          <% %w[twitch_id action].each do |column| %>
            <th>
              <%= t(".#{column}") %>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
      <% @channels.each do |channel| %>
        <tr>
            <td>
              <%= channel.twitch_id %>
            </td>
            <td>
              <%= link_to "Show", admin_channel_path(channel), class: "rounded-lg py-1 px-2 inline-block font-medium" %>
            </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
