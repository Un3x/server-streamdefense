<div class="mx-auto w-full">
  <h1 class="font-bold text-4xl">
    <%= t('.title') %>
  </h1>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="grid grid-cols-2 gap-4">
    <%= render partial: 'admin/users/user', locals: { user: @user } %>
    <div class="mx-auto w-full flex flex-row-reverse gap-4">
      <div>
        <%= link_to "Edit this user", edit_admin_user_path(@user), class: "mt-2 rounded-lg py-3 px-5 bg-orange-300 inline-block font-medium" %>
      </div>
      <div>
        <%= button_to "Destroy this user", admin_user_path(@user), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-300 font-medium" %>
      </div>
      <div>
        <%= link_to "Back to users", admin_users_path, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </div>
    </div>
    <%= render partial: 'admin/users/idle_games', locals: { idle_games: @user.idle_games } %>
  </div>
</div>
