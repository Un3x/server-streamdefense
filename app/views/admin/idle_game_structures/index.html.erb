<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Idle player structures</h1>
    <%= link_to "New idle player structure", new_admin_idle_game_structure_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="idle_game_structures" class="min-w-full">
    <% @idle_game_structures.each do |idle_game_structure| %>
      <%= render partial: 'admin/idle_game_structures/idle_game_structure', locals: { idle_game_structure: } %>
    <% end %>
  </div>
</div>
