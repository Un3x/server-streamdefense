
<div id="structure_formulas" class="min-w-full pt-4">
  <table class="border-collapse w-full border border-slate-500 bg-slate-800 text-sm shadow-sm">
    <thead>
      <tr>
        <% %w[category resource formula arguments simulation].each do |column| %>
          <th class="w-1/2 border border-slate-600 font-semibold p-4 text-slate-200 text-left">
            <%= t(".#{column}") %>
          </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
    <% structure_formulas.each do |structure_formula| %>
      <tr>
        <td class="border border-slate-700 p-4 text-slate-400">
          <%= structure_formula.category %>
        </td>
        <td class="border border-slate-700 p-4 text-slate-400">
          <%= structure_formula.resource.name if structure_formula.resource.present? %>
        </td>
        <td class="border border-slate-700 p-4 text-slate-400">
          <%= structure_formula.formula %>
        </td>
        <td class="border border-slate-700 p-4 text-slate-400">
          <%= structure_formula.arguments.to_s %>
        </td>
        <td class="border border-slate-700 p-4 text-slate-400">
          <%= structure_formula.perform(0) %>
          -
          <%= structure_formula.perform(5) %>
          -
          <%= structure_formula.perform(10) %>
          -
          <%= structure_formula.perform(20) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
