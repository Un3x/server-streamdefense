<div id="<%= dom_id idle_game_structure %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Structure:</strong>
    <%= idle_game_structure.structure_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Idle player:</strong>
    <%= idle_game_structure.idle_game_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Level:</strong>
    <%= idle_game_structure.level %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this idle player structure", admin_idle_game_structure_path(idle_game_structure), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this idle player structure", edit_admin_idle_game_structure_path(idle_game_structure), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
