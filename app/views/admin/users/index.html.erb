<div>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Users</h1>
  </div>

  <div id="users" class="min-w-full pt-4">
    <table class="border-collapse w-full text-sm shadow-sm">
      <thead>
        <tr>
          <% %w[email nickname twitch_id role action].each do |column| %>
            <th>
              <%= t(".#{column}") %>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.nickname %>
            </td>
            <td>
              <%= user.twitch_id %>
            </td>
            <td>
              <%= user.role %>
            </td>
            <td>
              <%= link_to "Show", admin_user_path(user), class: "rounded-lg py-1 px-2 inline-block font-medium" %>
            </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
